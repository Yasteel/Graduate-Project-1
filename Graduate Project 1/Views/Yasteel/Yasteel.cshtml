<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<div class="myPage">
    <h1>Yasteel's Page</h1>
    <div class="buttonContainer">
        <a asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> Home</a>
        <a asp-area="" asp-controller="Home" asp-action="Privacy"><i class="fa-solid fa-eye-slash"></i>Privacy</a>
    </div>
</div>

<style>
    .myPage{
        height: 16rem !important;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        gap: 1rem;
    }

    .buttonContainer{
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: row;
        gap: 1rem;
    }

    .buttonContainer a{
        padding: .5rem 1.5rem;
        border: 1px solid #212529;
        border-radius: 5px;
        background: none;
        color: #212529;
        text-decoration: none;   
    }

       
    .buttonContainer a:is(:hover, :focus){
        color: #97c93f;
        border-color: #97c93f;
        transition: 250ms ease-in-out border,
                    250ms ease-in-out color;
    }

    

    .buttonContainer a i{
        margin-right: 10px;
    }
</style>


